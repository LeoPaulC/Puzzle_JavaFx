<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.Controller_Fenetre" style="-fx-background-color: #ddb0ed" >

    <top>
        <MenuBar fx:id="menuBar">
            <Menu text="File" fx:id="File">
                <MenuItem text="New" fx:id="new_puzzle" onAction="#fill_new"></MenuItem>
                <MenuItem text="Lancement" fx:id="lancement" onAction="#fill_lancement"></MenuItem>
                <MenuItem text="Open" fx:id="open" onAction="#fill_open"></MenuItem>
                <MenuItem text="Save as" fx:id="save_as" onAction="#fill_save_as"></MenuItem>
                <MenuItem text="Quit" fx:id="quit" onAction="#fill_quit"></MenuItem>
            </Menu>
            <Menu text="Navigate" fx:id="Navigate">
                <MenuItem text="puzzle" fx:id="wiki_puzzle" onAction="#fill_wiki_puzzle"></MenuItem>
            </Menu>
            <Menu text="Help" fx:id="Help">
                <MenuItem text="énoncé" fx:id="enonce" onAction="#fill_enonce"></MenuItem>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <VBox fx:id="box_contour"  minWidth="700" minHeight="500" maxWidth="700" maxHeight="500" style="-fx-background-color: lightblue;">
            <children>
                <AnchorPane fx:id="pane_assemblage" ></AnchorPane>
                <Label fx:id="label_bienvenue" textFill="red" textAlignment="CENTER" underline="true" style=" -fx-padding: 250  0  0 150;"  text="Bienvenue dans le Jeu du Puzzle" visible="true">
                    <font>
                        <Font size="35.0"></Font>
                    </font>
                </Label>
            </children>
        </VBox>
    </center>


</BorderPane>
